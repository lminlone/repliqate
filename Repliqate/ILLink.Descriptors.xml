<linker>
    <!-- Keep Quartz DefaultThreadPool constructors -->
    <assembly fullname="Quartz">
        <type fullname="Quartz.Simpl.DefaultThreadPool" preserve="all"/>
    </assembly>

    <!-- Keep Serilog Log methods (esp. ForContext) -->
    <assembly fullname="Serilog">
        <type fullname="Serilog.Log" preserve="all"/>
    </assembly>

    <!-- If using Quartz.Extensions.DependencyInjection -->
    <assembly fullname="Quartz.Extensions.DependencyInjection" preserve="all" />
</linker>
